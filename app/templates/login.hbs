<div class="container">
<section class="row" style="margin-top: 100px;">

	<h3 class="col-md-12 text-center" style="text-align: center">Login</h3>
	<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4 login-form-bg">
		<form class="signin form-horizontal">
			<fieldset>
					<!-- <div class="form-group">
						<div class="text-center text-danger">
							<div class="alert alert-danger" role="alert">
								<strong></strong>
