
<div class="container">
  <div>
    {{#link-to "admin.product"}}
    <a href="/create" class="btn btn-primary pull-right">Create Product</a>
    {{/link-to}}
    <table class="table table-hover">
      <tr>
        <th>Edit</th>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Prices</th>
        <th>Image</th>
      </tr>
      {{#each model as |product|}}
        <tr>
            <td>{{#link-to 'admin.update' product.id}} edit {{/link-to}}</td>
            <td>{{product.id}}</td>
            <td>{{product.productName}}</td>
            <td>{{product.quantity}}</td>
            <td>{{product.Prices.[0].displayName}}</td>
            <td><img src="{{product.imageUrl}}" class="thumb"></td>
        </tr>
      {{/each}}
